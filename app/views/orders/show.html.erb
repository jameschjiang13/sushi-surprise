    <%= button_to "Return/Cancel Order", order_path(@order.id), method: :delete, class:"btn btn-dark btn-sm" %><br>

    <%= button_to "Review #{@order.sushi.name}", new_review_path, method: :get,  class:"btn btn-dark btn-sm" %><br>
